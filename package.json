  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack && npm run compile-mcp",
    "compile-mcp": "tsc src/mcp/server.ts src/mcp/tools/userStoryTools.ts src/mcp/tools/viewTools.ts --outDir dist/mcp --rootDir src/mcp --target es2020 --module commonjs --esModuleInterop --skipLibCheck",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "cleanup": "node cleanup-js-files.js",
    "test:e2e": "tsc -p ./test-e2e && node ./test-e2e/out/runTest.js",
    "test:e2e:debug": "tsc -p ./test-e2e && node --inspect-brk ./test-e2e/out/runTest.js"
  },
