    "languageModelTools": [
      {
        "name": "create_user_story",
        "displayName": "Create User Story",
        "modelDescription": "Create a new user story in the AppDNA model with validation",
        "inputSchema": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Optional title/number for the user story"
            },
            "description": {
              "type": "string",
              "description": "The user story description following the format: 'As a [Role] I want to [action] [object]'"
            }
          },
          "required": [
            "description"
          ]
        }
      },
      {
        "name": "list_user_stories",
        "displayName": "List User Stories",
        "modelDescription": "List all user stories from the AppDNA model",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "secret_word_of_the_day",
        "displayName": "Secret Word of the Day",
        "modelDescription": "Get the secret word of the day, uniquely generated for this MCP server and project",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      }
    ],
